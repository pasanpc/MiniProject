                        android:layout_width="147dp"
                        android:layout_height="123dp"
                        android:contentDescription="eon"
                        android:src="@drawable/hyhundaieon"></ImageView>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textTransmission"
                        android:layout_width="103dp"
                        android:layout_height="31dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="123dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginBottom="18dp"
                        android:text="Manual"
                        android:textColor="#0E0E0E"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/textBags"
                        android:layout_width="83dp"
                        android:layout_height="28dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="37dp"
                        android:layout_marginTop="89dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="56dp"
                        android:text="Bags"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/textBagsCount"
                        android:layout_width="29dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="89dp"
                        android:layout_marginEnd="91dp"
                        android:layout_marginBottom="56dp"
                        android:text="3"
                        android:textColor="#0E0E0E"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/textSeats"
                        android:layout_width="83dp"
                        android:layout_height="28dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="37dp"
                        android:layout_marginTop="54dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="90dp"
                        android:text="Seats"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/textPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="58dp"
                        android:text="9000/="
                        android:textColor="#0E0E0E"
                        android:textSize="24sp"></TextView>

                    <TextView
                        android:id="@+id/txtSeatsCount"
                        android:layout_width="29dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="54dp"
                        android:layout_marginEnd="92dp"
                        android:layout_marginBottom="90dp"
                        android:text="5"
                        android:textColor="#0E0E0E"
                        android:textSize="18sp"></TextView>
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnSelect2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1057CD"
                android:text="@string/select"
                android:textColor="#F3ECEC" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
